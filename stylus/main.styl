@import 'jeet'

*
  font-family 'Helvetica Neue', Helvetica, 'Microsoft Yahei', 'Hiragino Sans GB', 'WenQuanYi Micro Hei', sans-serif;

html
  font-size 62.5%
  text-align center
  verticle-align middle

.r
  border-right  solid 1px #E7E7E7
.b
  border-bottom 1px solid #E7E7E7
.t
  border-top 1px solid #E7E7E7
.l
  border-left 1px solid #E7E7E7

body
  font-size 1.6rem
  .info
    span(1)
    
    letter-spacing 3px
    background-image url(../img/bg_bw.jpg)
    background-position 0 0 
    text-align center
    font-size 2rem
    color white
    .info__content
      width 60rem
      height 30rem
      position absolute
      top 50%
      left 50%
      margin-left -30rem
      margin-top -15rem
    .info__title
      letter-spacing 15px
    .info__subtitle
      letter-spacing 8px
      font-size 5rem
      font-weight bold
    .info__btn
      padding-top 1rem
      a
        cursor pointer
        text-decoration none
        background-color #5399fc
        color white
        display inline-block
        padding 1rem
        width 36rem
        height 6rem
        border-radius 25rem
        font-size 3rem
        &:hover
          color white
          background-color #64a3fc

  .header
    span(1)
    background-color white
    position absolute
    bottom 0
    box-shadow 0px 0px 0.5rem rgba(0, 0, 0, 0.3)
    padding 1rem
    height 6rem
    
    .header__nav
      span(0.42, offset: 0.29)
      height 4rem
      .header__btn
        span(1/7)
        padding-top 0.5rem
        text-align center
        a
          cursor pointer
          text-decoration none
          color #4d4d4d
          font-size 1.6rem
          &:hover
            color #5399fc
            text-decoration none
      .highlight
        padding-top 0.5rem
        a
          background-color #5399fc
          color white
          display inline-block
          padding 0.5rem
          width 14rem
          border-radius 1.6rem
          &:hover
            color white
            background-color #64a3fc
    
    .header__social
      span(0.22, offset: 0.07)
      height 4rem
      .header__social__btn
        col(1/4)
        padding 1rem
        width 3rem
        text-align center
        a
          cursor pointer
          text-decoration none
          color #4d4d4d
          font-size 1.9rem
          &:hover
            color #5399fc
            text-decoration none
          i
            font-size 2rem
            
  
          
  .speaker
    span(0.7, offset=0.15)
    color #34495e
    h1
      center(30rem)
      margin-top 6rem
      margin-bottom 3rem
      font-weight bold
      text-align center
    .speaker__card
      span(1/3)
      
      padding 1rem
      .speaker__content
        span(1)
        padding 4rem
        padding-top 1rem
        h4.name
          font-weight 700
          margin-bottom 2rem
        p.detail
          margin-top 2rem
    
  
  .intro
    span(1)
    color #34495e
    background-color #f8f8f8
    div.intro__content
      span(0.7, offset=0.15)
    h1
      center(30rem)
      margin-top 6rem
      margin-bottom 3rem
      font-weight bold
      text-align center
    .intro__card
      span(1/3)
      padding 2rem
      img
        width 100%
      h3.intro__reason
        margin-bottom 2rem
      p.intro__detail
        margin-top 2rem
  .agenda
    span(1)
    color #34495e
    background-color #f8f8f8
    div.agenda__content
      span(0.5, offset=0.25)
      h1
        center(30rem)
        margin-top 6rem
        margin-bottom 3rem
        font-weight bold
        text-align center
      ul
        line-height 2rem
        span(0.6, offset=0.2)
        font-size 1.6rem
        text-align left
        margin-bottom 6rem
  
  .ticket
    span(0.5, offset=0.25)
    color #34495e
    text-align left
    h1
      center(30rem)
      margin-top 6rem
      margin-bottom 3rem
      font-weight bold
      text-align center
    ul
      line-height 2rem
      span(0.6, offset=0.2)
      font-size 1.6rem
    .ticket__btn
      span(1)
      text-align center
      margin-top 5rem
      margin-bottom 5rem
      a
        cursor pointer
        text-decoration none
        background-color #5399fc
        color white
        display inline-block
        padding 1rem
        width 36rem
        height 6rem
        border-radius 25rem
        text-align center
        font-size 3rem
        &:hover
          color white
          background-color #64a3fc
  .sponsor
    span(1)
    color #34495e
    background-color #f8f8f8
    div.intro__content
      span(0.5, offset=0.25)
    h1
      center(30rem)
      margin-top 6rem
      margin-bottom 3rem
      font-weight bold
      text-align center
    h4
      margin-top 6rem
      margin-bottom 3rem
      text-align center
  .medias
    span(0.5, offset=0.25)
    color #34495e
    h1
      center(30rem)
      margin-top 6rem
      margin-bottom 3rem
      font-weight bold
      text-align center
    .medias__card
      span(1/3)
      display inline-block
      padding 1rem
      height 10rem
      img
        width 100%
  .map
    span(1)
    color #34495e
    background-color #f8f8f8
    div.map__content
      span(0.5, offset=0.25)
    h1
      center(30rem)
      margin-top 6rem
      margin-bottom 3rem
      font-weight bold
      text-align center
  .subscribe
    span(1)
    background-color #2770E7
    padding 1rem
    h2
      letter-spacing 2px
      span(0.3, offset=0.2)
      color white
    div.subscribe__main
      span(0.5)
      height 6rem
      padding 1rem
      input.subscribe__email
        span(0.6)
        background: #FFF;
        border-radius: 2rem 0 0 2rem
        border none
        color: #4d4d4d;
        width 30rem
        height 4rem
        line-height: 200%;
        vertical-align: middle;
      a.subscribe__btn
        span(0.4)
        border none
        display inline-block
        text-align center
        background-color #5399fc
        color white
        width 10rem
        height 4rem
        border-radius: 0 2rem 2rem 0
        padding 0.5rem
        line-height: 200%;
        vertical-align middle
        font-size 2rem
        text-decoration none
  footer
    span(1)
    background-color black
    color white
    padding 2rem
    vertical-align middle
    div.main
      span(0.4, offset=0.3)
      div
        span(0.5)
        a
          color white
          text-decoration none
        
      
